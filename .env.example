# Environment Configuration for Sweet Shop Management System

# JWT Secret Key - Change this to a secure random string in production!
# Generate with: openssl rand -hex 32
SECRET_KEY=your-secret-key-please-change-this-to-a-secure-random-string-in-production

# JWT Token Expiration (in minutes)
ACCESS_TOKEN_EXPIRE_MINUTES=30

# Database Configuration
DATABASE_URL=sqlite:///./test.db

# CORS Configuration
CORS_ORIGINS=*

# ImageKit.io Configuration
# Sign up at https://imagekit.io/ to get your credentials
IMAGEKIT_PRIVATE_KEY=your_imagekit_private_key_here
IMAGEKIT_PUBLIC_KEY=your_imagekit_public_key_here
IMAGEKIT_URL_ENDPOINT=https://ik.imagekit.io/your_imagekit_id

# Application Settings
APP_NAME=Sweet Shop Management System
APP_VERSION=1.0.0
DEBUG=True
